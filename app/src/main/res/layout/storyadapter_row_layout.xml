<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="?attr/backgroundCardColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/storyAdapter_container"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/storyAdapter_image_imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY" />


        <TextView
            android:id="@+id/storyAdapter_title_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:fontFamily="serif"
            android:text="Title"
            android:textColor="?attr/primaryTextColor"
            android:textSize="18sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/storyAdapter_date_textView"
            android:textSize="12sp"
            android:layout_margin="4dp"
            android:textColor="?attr/secondaryTextColor"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/storyAdapter_adView_container"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    </LinearLayout>

</android.support.v7.widget.CardView>