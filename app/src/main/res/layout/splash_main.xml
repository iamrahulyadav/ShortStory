<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">


    <ImageView
        android:id="@+id/splash_icon_imageview"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter"
        android:src="@drawable/splash_screen_logo"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splash_icon_imageview"
        android:layout_centerInParent="true"
        android:fontFamily="serif"
        android:text="Story Box"
        android:textAlignment="center"
        android:textColor="@color/colorWhiteBg"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/splash_title_textView"
        android:typeface="serif" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splash_title_textView"
        android:layout_centerInParent="true"
        android:fontFamily="serif"
        android:text="Daily Short stories"
        android:textAlignment="center"
        android:textColor="@color/colorWhiteBg"
        android:textSize="14sp"
        android:textStyle="bold"
        android:typeface="serif" />


</RelativeLayout>